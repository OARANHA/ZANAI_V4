{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "e:/"
      ]
    },
    "sqlite": {
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "/prisma"
      ]
    },
    "esignatures": {
      "command": "uvx",
      "args": [
        "mcp-server-esignatures"
      ],
      "env": {
        "ESIGNATURES_SECRET_TOKEN": "ara1nha1@alessandroaranha"
      }
    }
  }
}